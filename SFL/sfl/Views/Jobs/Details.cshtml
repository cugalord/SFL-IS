@model sfl.Models.Job

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Job</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Username")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StaffUsername)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Date created")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Date completed")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCompleted)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Parcels in job")
        </dt>
        <dd class="col-sm-10">
            @for (int i = 0; i < Model.JobsParcels.Count; i++)
            {
                @Html.DisplayFor(model => model.JobsParcels.ToList()[i].ParcelID)
                <br>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
